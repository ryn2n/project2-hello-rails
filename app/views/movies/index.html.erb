<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div id="movies">
  <table>
    <thead>
      <tr>
        <th class="<%= 'highlight-asc' if params[:sort_by] == 'title' && params[:order] == 'asc' %>
                 <%= 'highlight-desc' if params[:sort_by] == 'title' && params[:order] == 'desc' %>"><%= link_to "Title #{sort_indicator('title').html_safe}", movies_path(sort_by: 'title', order: params[:order] == 'asc' ? 'desc' : 'asc') %></th>
        <th><%= link_to "Rating #{sort_indicator('rating').html_safe}", movies_path(sort_by: 'rating', order: params[:order] == 'asc' ? 'desc' : 'asc') %></th>
        <th><%= link_to "Release Date #{sort_indicator('release_date').html_safe}", movies_path(sort_by: 'release_date', order: params[:order] == 'asc' ? 'desc' : 'asc') %></th>
        <th>Link to movie</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.release_date.strftime("%B %d, %Y") if movie.release_date %></td>
          <td><%= link_to "Show movie", movie_path(movie, sort_by: params[:sort_by], order: params[:order] == 'asc' ? 'desc' : 'asc') %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">
          <%= link_to "Create new movie", new_movie_path(sort_by: params[:sort_by], order: params[:order] == 'asc' ? 'desc' : 'asc') %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
